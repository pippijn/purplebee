	src/backend/PurpleBee/PurpleBee.pm

EXTRA_DIST +=					\
	$(XS_FILES)				\
	src/backend/PurpleBee/PurpleBee.pm	\
	src/backend/PurpleBee/typemap

SUFFIXES = .xs

src/backend/PurpleBee/PurpleBee.cpp: src/backend/PurpleBee/typemap $(XS_FILES)

CLEANFILES +=					\
	src/backend/PurpleBee/PurpleBee.cpp	\
	perlxsi.c

.xs.cpp:
	$(MKDIR_P) `dirname $@`
	$(PERL) -MExtUtils::Embed -e xsinit -- -std PurpleBee
	PERL="$(PERL)" srcdir="$(srcdir)/src/backend/PurpleBee"			\
		$(PERL) $(PERLPRIVLIBEXP)/ExtUtils/xsubpp -C++ -csuffix .cpp	\
			-typemap $(PERLPRIVLIBEXP)/ExtUtils/typemap		\
			-typemap typemap					\
			-prototypes $< > $@					\
		|| ($(RM) $@ && false)
